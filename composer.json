{
    "name": "huskycms/hcb-comments",
    "type": "huskycms-backend-plugin",
    "description": "Comments managing plugin for backend area of the HuskyCMS",
    "authors": [
        {
            "name": "Mylotskyi Oleksii",
            "email": "spalaxinco@gmail.com"
        }
    ],

    "keywords": [
        "huskycms", "plugin", "module"
    ],
    "license": "MIT",
    "homepage": "http://huskycms.com/hcb-comments",
    "repositories": [
        {
            "type": "composer",
            "url": "http://spalax:spalax@packages.milsdev.com"
        }
    ],
    "require-dev": {
        "phpunit/PHPUnit": "3.7.*"
    },

    "require": {
        "php": ">=5.3",
        "zendframework/zendframework": ">=2.0.0",
        "spalax/zf2-libs": "dev-master",
        "doctrine/doctrine-module": "0.*",
        "doctrine/doctrine-orm-module": "0.*",
        "doctrine/migrations": "v1.0-ALPHA1",
        "rwoverdijk/assetmanager": "1.3.5"
    },

    "autoload": {
        "psr-0": {
            "HcbComments": "src/"
        },

        "classmap": [
            "./Module.php"
        ]
    },
    "minimum-stability": "dev"
}
